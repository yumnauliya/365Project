{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (C++20)",
            "type": "cppbuild",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
    			"-std=c++20",
    			"-fdiagnostics-color=always",
    			"-g",
    			"*.cpp",
    			"-o",
    			"${fileDirname}\\jolyne.exe"
			],

            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: g++ (C++20)"
        }
    ]
}
